%h1 Listing professores

%table
  %thead
    %tr
      %th Matricula
      %th Nome
      %th Sobrenome
      %th Senha
      %th
      %th
      %th

  %tbody
    - @professores.each do |professor|
      %tr
        %td= professor.matricula
        %td= professor.nome
        %td= professor.sobrenome
        %td= professor.senha
        %td= link_to 'Show', professor
        %td= link_to 'Edit', edit_professor_path(professor)
        %td= link_to 'Excluir', professor, :method => :delete, :data => { :confirm => 'Are you sure?' }

