%html
	%head
		%meta{ :charset =>"utf-8"}
		%title= "Academico"
		= stylesheet_link_tag "application"
		= javascript_include_tag "application"
	%body
		%div{ :class => "shadow"}
			%div{ :class => "bootstrap"}
				%header{ :class => "header" }
					= render "layouts/header"

				%div{ :class => "menuEsquerdo"}
					= render "layouts/menuEsquerdo"

				%main{ :class => "main", :role =>"main"}
					= yield

				%footer{ :class => "footer" }
					=render "layouts/footer"

				
